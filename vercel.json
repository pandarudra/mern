{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*).js",
      "headers": { "content-type": "text/javascript" },
      "dest": "/$1.js"
    },
    {
      "src": "/(.*).css",
      "headers": { "content-type": "text/css" },
      "dest": "/$1.css"
    },
    {
      "src": "/(.*).(jpg|png|ico|svg)",
      "dest": "/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
